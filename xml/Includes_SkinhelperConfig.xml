                    <bordertexture colordiffuse="FF1E1E1E">colors/white.png</bordertexture>
                    <bordersize>1</bordersize>
                </control>
            </control>
            <control type="group">
                <visible>String.IsEqual(ListItem.Property(is_visible),true)</visible>
